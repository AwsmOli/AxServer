<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.isawsm.accelerate.server.UI.MainForm">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <MenuBar prefHeight="25.0" prefWidth="600.0" BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#openSettings" text="Settings..." />
                    <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#openAbout" text="About..." />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <bottom>
            <HBox alignment="CENTER_LEFT" prefHeight="22.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="lblStatus" text="No connection to Decoder" />
               </children>
               <BorderPane.margin>
                  <Insets left="2.0" right="2.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="tblResults" onMouseClicked="#tableClicked" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn fx:id="driverCol" prefWidth="75.0" text="Driver" />
                <TableColumn fx:id="avgCol" prefWidth="75.0" text="Average" />
                <TableColumn fx:id="bestCol" prefWidth="75.0" text="Best" />
                  <TableColumn fx:id="lapsCol" prefWidth="75.0" text="Laps" />
                  <TableColumn fx:id="consistencyCol" prefWidth="75.0" text="Consistency" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <right>
            <TableView fx:id="tblDetail" prefHeight="353.0" prefWidth="141.0" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn prefWidth="75.0" text="Detail">
                     <columns>
                        <TableColumn fx:id="tcNumber" maxWidth="30.0" minWidth="30.0" prefWidth="30.0" sortType="DESCENDING" text="#" />
                      <TableColumn fx:id="tcIcon" maxWidth="25.0" minWidth="25.0" prefWidth="25.0" />
                      <TableColumn fx:id="tcTime" prefWidth="61.0" styleClass="-fx-alignment: left;" text="Time" />
                     </columns>
                  </TableColumn>
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
